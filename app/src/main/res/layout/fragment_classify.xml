<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.casparx.housailei.fragment.ClassifyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/include"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_header"
                android:layout_width="match_parent"
                android:layout_height="220dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_e"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/btn_baioqingbao"
                    style="@style/ClassifyTapImagesLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/ClassifyTapImages"
                        android:src="@drawable/biaoqingbao" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="表情包" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/btn_danren"
                    style="@style/ClassifyTapImagesLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/ClassifyTapImages"
                        android:src="@drawable/danren" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="单人" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/btn_qinglv"
                    style="@style/ClassifyTapImagesLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/ClassifyTapImages"
                        android:src="@drawable/qinglv" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="情侣" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/btn_guimi"
                    style="@style/ClassifyTapImagesLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/ClassifyTapImages"
                        android:src="@drawable/guimi" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="闺密" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/btn_jiyou"
                    style="@style/ClassifyTapImagesLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/ClassifyTapImages"
                        android:src="@drawable/jiyou" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="基友" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/btn_tuanti"
                    style="@style/ClassifyTapImagesLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="@style/ClassifyTapImages"
                        android:src="@drawable/tuanti" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="小团体" />
                </FrameLayout>


            </LinearLayout>

            <com.casparx.housailei.view.MyGridView
                android:id="@+id/classify_gridview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/grey_de"
                android:clipToPadding="false"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:paddingBottom="25dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:verticalSpacing="10dp">
            </com.casparx.housailei.view.MyGridView>
            <LinearLayout
                android:id="@+id/ll_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_1"
                    android:src="@drawable/danren1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/img_2"
                    android:src="@drawable/danren1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/img_3"
                    android:src="@drawable/danren1"                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</FrameLayout>
