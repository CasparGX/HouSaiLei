<?xml version="1.0" encoding="utf-8"?>
<com.casparx.housailei.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/demo_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/demo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/black_t_3"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="标题" />

</com.casparx.housailei.SquareLayout>